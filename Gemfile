  gem 'sass-rails'
  gem 'therubyracer'
  gem 'libv8'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
	gem "pry"
	gem "awesome_print"
end

group :development, :test do
	gem 'rspec-rails'
	gem 'capybara'
	gem 'factory_girl'
end

